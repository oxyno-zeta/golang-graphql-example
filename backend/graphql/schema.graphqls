# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  creationDate: String!
}

type Query {
  todos: [Todo]!
}

input NewTodo {
  text: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  closeTodo(todoId: ID!): Todo!
}
